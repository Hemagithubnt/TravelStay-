<% layout("/layouts/boilerplate") %>
<br>
<h3>All Listings</h3><br>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card ">
      
        <% if (listing.image && listing.image.url) { %>
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;" />
        <% } else { %>
          <img src="https://via.placeholder.com/400x300.png?text=No+Image" class="card-img-top" alt="no image" style="height: 20rem;" />
        <% } %>

        <div class="card-img-overlay">
          <i class="fa-solid fa-heart"></i>
        </div>

        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price Not Available" %>
          </p>
        </div>
        </div>
    </a>
  <% } %>
</div>

